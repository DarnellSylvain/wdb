<%- include ("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit <%=superhero.name%></h1>
		<div style="width:30%; margin: 25px auto">
			<form action="/superheroes/<%= superhero._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" value="<%=superhero.name%>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" value="<%=superhero.image%>" required>
				</div>
				<div class="form-group">
					<select class="form-control" name="affiliation" required>
						<option value="" disabled selected>Select your option</option>
						<option value="Hero">Hero</option>
						<option value="Villain">Villain</option>
						<option value="Antihero">Anti-Hero</option>
					</select>
                </div>
                <div class="form-group">
					<input class="form-control" type="text" name="description" value="<%=superhero.description%>" required>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
				
			</form>
			<a href="/superheroes">Go Back</a>
		</div>
		
		
	</div>
</div>
<%- include ("../partials/footer") %>