<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to SuperCamp</h1>
			<p>View our hand-picked superheroes and supervillains from all different universes!</p>
			<p><a class="btn btn-primary btn-lg" href="/superheroes/new">Add new Superhero!</a></p>	
		</div>
	</header>
	
	<div class="row text-center">
		<%superheroes.forEach(function(superhero){%>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src=" <%= superhero.image %>">
					<div class="caption">
						<h4><%=superhero.name%></h4>
					</div>
					<p>
						<a href="/superheroes/<%= superhero._id %>" class="btn btn-primary">More Info</a>
					</p>
				</div>
			</div>
		<%});%>
	</div>
</div>

<%- include("../partials/footer") %>